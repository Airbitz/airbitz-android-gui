<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_item_business"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_selected_tab">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="112dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bg_selected_tab"
            android:scaleType="centerCrop"
            android:id="@+id/venueBackground" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@android:color/transparent">


            <TextView
                android:id="@+id/textview_business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business Name"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="6"
                android:textColor="@android:color/white"
                android:layout_above="@+id/textview_discount"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true" />


            <TextView
                android:id="@+id/textview_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type | BTC Discount %"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true" />

        </LinearLayout>


        <TextView
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/bg_ribbon"
            android:text=".45 miles"
            android:textAlignment="center"
            android:id="@+id/textview_distance"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>