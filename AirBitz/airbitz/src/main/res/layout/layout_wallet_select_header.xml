<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title_header"
    android:layout_width="match_parent"
    android:layout_height="44.1dp"
    android:background="@android:color/transparent">

    <com.airbitz.objects.HighlightOnPressButton
        android:id="@+id/layout_wallet_select_header_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:textColor="@color/blue_highlight"
        android:background="@android:color/transparent"
        android:contentDescription="@string/string_back_button"
        android:text="Back"
        android:visibility="invisible" />

    <com.airbitz.objects.HighlightOnPressSpinner
        android:id="@+id/layout_wallet_select_header_spinner"
        style="@style/GrayDropShadow"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:dropDownHorizontalOffset="-50dp"
        android:dropDownVerticalOffset="0dp"
        android:dropDownWidth="200dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:popupBackground="@drawable/rounded_edge_white_bg"
        android:spinnerMode="dropdown"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <com.airbitz.objects.HighlightOnPressButton
        android:id="@+id/layout_wallet_select_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:textColor="@color/blue_highlight"
        android:background="@android:color/transparent"
        android:contentDescription="@string/string_help_button"
        android:text="Help"
        android:visibility="invisible"/>

</RelativeLayout>
