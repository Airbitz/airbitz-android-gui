<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/fragment_request_header"
        layout="@layout/layout_wallet_select_header"
        android:layout_width="match_parent"
        android:layout_height="44.1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_request_header"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_export_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_button_dark_blue"
            android:gravity="center_horizontal"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/layout_btc_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_wallet"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/request_selected_denomination"
                    style="@style/GrayDropShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="USD"
                    android:textColor="@color/text_off_white"
                    android:textSize="26dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/request_amount"
                    style="@style/GrayDropShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_weight="20"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="@string/request_amount_hint"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/text_hint"
                    android:textCursorDrawable="@drawable/bold_cursor_white"
                    android:textSize="17dp"
                    android:textStyle="normal" />

                <info.hoang8f.android.segmented.SegmentedGroup
                    android:id="@+id/request_fiat_btc_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    segmentedgroup:tint_color="@color/text_off_white"
                    segmentedgroup:checked_text_color="@color/text_dark_gray"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/layout_double_selector_left"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:text="USD"
                        style="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/layout_double_selector_right"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:text="mBTC"
                        style="@style/RadioButton" />
                </info.hoang8f.android.segmented.SegmentedGroup>
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/request_not_selected_denomination"
            style="@style/GrayDropShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/layout_export_data"
            android:singleLine="true"
            android:text="BTC"
            android:textColor="@color/text_dark_gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textview_converter"
            style="@style/GrayDropShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/layout_export_data"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:singleLine="true"
            android:text="1 uBTC = $ 000.000 USD"
            android:textColor="@color/text_dark_gray"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/request_qr_code_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textview_converter"
            android:background="@drawable/rounded_edge_white_bg" >

            <ImageView
                android:id="@+id/qr_code_view"
                android:layout_width="248dp"
                android:layout_height="248dp"
                android:padding="4dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_white_corners" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/request_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_qr_code_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/request_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/request_qr_waiting_for_payment"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/request_bitcoin_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_gravity="center_horizontal"
                android:ellipsize="middle"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:text="1XxdlerRraLLjev9274"
                android:textSize="14dp" />

            <info.hoang8f.android.segmented.SegmentedGroup
                android:id="@+id/request_bottom_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_gravity="center_horizontal"
                segmentedgroup:tint_color="@color/text_off_white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/fragment_triple_selector_left"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="Copy"
                    style="@style/RadioButton" />

                <RadioButton
                    android:id="@+id/fragment_triple_selector_center"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    style="@style/RadioButton" />

                <RadioButton
                    android:id="@+id/fragment_triple_selector_right"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:text="SMS"
                    style="@style/RadioButton" />
            </info.hoang8f.android.segmented.SegmentedGroup>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
