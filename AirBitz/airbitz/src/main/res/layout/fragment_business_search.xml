<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/search_form"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_form_height"
        android:padding="1dp"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/search_button"
            android:src="@drawable/ico_loc"
            android:background="@drawable/directory_search_button"
            android:layout_width="@dimen/search_form_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="1dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <EditText
            android:id="@+id/query"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/search_button"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:singleLine="true"
            android:padding="10dp"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:background="@drawable/directory_search_button"
            android:hint="@string/category_or_business_name_initial"
            />

        <EditText
            android:id="@+id/location"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/search_button"
            android:layout_below="@id/query"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:singleLine="true"
            android:padding="10dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_mylocation"
            android:drawablePadding="5dp"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:background="@drawable/directory_search_button"
            android:hint="Location..." />

    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_below="@+id/search_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0px"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:clipToPadding="false" />

    <RelativeLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_below="@+id/search_form"
            android:indeterminateOnly="true"
            android:minHeight="100dp"
            android:maxHeight="100dp" 
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>
