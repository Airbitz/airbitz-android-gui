<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44.1dp">

    <TextView
        android:id="@+id/item_listview_wallets_archive_header_text"
        android:layout_width="match_parent"
        android:layout_height="44.1dp"
        android:background="@drawable/bg_wallets_header"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/fragment_wallets_list_archive_title"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/item_listview_wallets_archive_header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/two_mm"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/collapse_up" />
</RelativeLayout>
