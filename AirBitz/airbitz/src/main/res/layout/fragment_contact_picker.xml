<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true" >

    <include layout="@layout/layout_toolbar_title" />

    <LinearLayout
        android:id="@+id/fragment_contact_picker_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:weightSum="100">

        <com.airbitz.objects.LimitedEditText
            android:id="@+id/fragment_contact_picker_edittext_name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/emboss_down"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="textAutoComplete|textNoSuggestions|textCapWords"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@drawable/bold_cursor_white"
            android:textSize="17dp" />

        <ListView
            android:id="@+id/fragment_contact_picker_listview_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/gray_border"
            android:dividerHeight="1px"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>
