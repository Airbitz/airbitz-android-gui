<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_detail_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_app"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44.1dp"
        android:id="@+id/fragment_category_layout_header"
        android:background="@drawable/bg_dark_header">

        <com.airbitz.objects.HighlightOnPressImageButton
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/fragment_contact_picker_button_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_back"
            android:padding="@dimen/two_mm"/>

        <TextView
            android:id="@+id/fragment_contact_picker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>


        <com.airbitz.objects.HighlightOnPressImageButton
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:id="@+id/fragment_contact_picker_button_help"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_help"
            android:padding="@dimen/two_mm"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_contact_picker_main_layout"
        android:weightSum="100"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

            <EditText
                android:id="@+id/fragment_contact_picker_edittext_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="17sp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textColorHint="@color/text_hint"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="textAutoComplete|textNoSuggestions|textCapWords"
                android:textCursorDrawable="@drawable/bold_cursor_white"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:layout_marginTop="2dp" />

            <ListView
                android:id="@+id/fragment_contact_picker_listview_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/gray_border"
                android:dividerHeight="1px"
                android:visibility="visible" />

        </LinearLayout>

</LinearLayout>
