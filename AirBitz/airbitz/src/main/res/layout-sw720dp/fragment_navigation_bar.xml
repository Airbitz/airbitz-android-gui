<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_bar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_navigation_bar_popup_container"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/popup_directory_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="-20dp"
            android:background="@drawable/tab_popup_left"
            android:layout_weight="1"
            android:visibility="invisible">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="64dp"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_directory_selected"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/BlackDropShadow"
                android:layout_marginBottom="44dp"
                android:textColor="@android:color/white"
                android:text="@string/nav_bar_directory_text"
                android:textSize="30dp"
                android:singleLine="true"
                android:gravity="center_horizontal|bottom" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/popup_request_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="-21dp"
            android:background="@drawable/tab_popup_middle"
            android:layout_weight="1"
            android:visibility="invisible">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_request_selected"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/BlackDropShadow"
                android:layout_marginBottom="44dp"
                android:textColor="@android:color/white"
                android:text="@string/nav_bar_request_text"
                android:textSize="30dp"
                android:singleLine="true"
                android:gravity="center_horizontal|bottom" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/popup_send_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="-21dp"
            android:background="@drawable/tab_popup_middle"
            android:layout_weight="1"
            android:visibility="invisible">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_send_selected"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/BlackDropShadow"
                android:layout_marginBottom="44dp"
                android:textColor="@android:color/white"
                android:text="@string/nav_bar_send_text"
                android:textSize="30dp"
                android:singleLine="true"
                android:gravity="center_horizontal|bottom" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/popup_wallet_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="-21dp"
            android:background="@drawable/tab_popup_middle"
            android:layout_weight="1"
            android:visibility="invisible">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_wallets_selected"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/BlackDropShadow"
                android:layout_marginBottom="44dp"
                android:textColor="@android:color/white"
                android:text="@string/nav_bar_wallets_text"
                android:textSize="30dp"
                android:singleLine="true"
                android:gravity="center_horizontal|bottom" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/popup_setting_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-20dp"
            android:background="@drawable/tab_popup_right"
            android:layout_weight="1"
            android:visibility="invisible">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_settings_selected"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/BlackDropShadow"
                android:layout_marginBottom="44dp"
                android:textColor="@android:color/white"
                android:text="@string/nav_bar_settings_text"
                android:textSize="30dp"
                android:singleLine="true"
                android:gravity="center_horizontal|bottom" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/normal_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:orientation="horizontal"
        android:background="@drawable/tab_base"
        android:weightSum="5">

        <RelativeLayout
            android:id="@+id/directory_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/nav_bar_directory_image"
                android:layout_width="72dp"
                android:layout_height="64dp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_directory"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true" />
            <TextView
                android:id="@+id/nav_bar_directory_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WhiteDropShadow"
                android:layout_marginBottom="10dp"
                android:textColor="@color/dark_gray_text"
                android:text="@string/nav_bar_directory_text"
                android:textSize="26dp"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/request_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/nav_bar_request_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="14dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_request"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true" />
            <TextView
                android:id="@+id/nav_bar_request_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WhiteDropShadow"
                android:layout_marginBottom="10dp"
                android:textColor="@color/dark_gray_text"
                android:text="@string/nav_bar_request_text"
                android:textSize="26dp"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/nav_bar_send_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="14dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_send"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true" />
            <TextView
                android:id="@+id/nav_bar_send_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WhiteDropShadow"
                android:layout_marginBottom="10dp"
                android:textColor="@color/dark_gray_text"
                android:text="@string/nav_bar_send_text"
                android:textSize="26dp"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/wallet_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/nav_bar_wallets_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_wallets"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true" />
            <TextView
                android:id="@+id/nav_bar_wallets_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WhiteDropShadow"
                android:layout_marginBottom="10dp"
                android:textColor="@color/dark_gray_text"
                android:text="@string/nav_bar_wallets_text"
                android:textSize="26dp"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/setting_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/nav_bar_settings_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_settings"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="true" />
            <TextView
                android:id="@+id/nav_bar_settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WhiteDropShadow"
                android:layout_marginBottom="10dp"
                android:textColor="@color/dark_gray_text"
                android:text="@string/nav_bar_settings_text"
                android:textSize="26dp"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
