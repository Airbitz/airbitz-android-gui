<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#ff91bbcd" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="@dimen/border_radius_size" />
            <stroke
                android:width="1dp"
                android:color="#666666" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#EEEEEE"
                android:centerY="90%"
                android:endColor="#777777"
                android:startColor="#FFFFFF" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

</layer-list>