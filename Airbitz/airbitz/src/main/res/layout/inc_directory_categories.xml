<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.airbitz.objects.AutoResizeTextView
                android:id="@+id/button_restaurant"
                android:drawableLeft="@drawable/ic_category_restaurants"
                android:text="@string/restaurants"
                style="@style/CategoryButton"
                />

            <com.airbitz.objects.AutoResizeTextView
                android:id="@+id/button_gift_cards"
                android:drawableLeft="@drawable/ic_category_gift_cards"
                android:text="@string/gift_cards"
                style="@style/CategoryButton"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.airbitz.objects.AutoResizeTextView
                android:id="@+id/button_coffee_tea"
                android:drawableLeft="@drawable/ic_category_coffee_tea"
                android:text="@string/coffee_and_tea"
                style="@style/CategoryButton"
                />

            <com.airbitz.objects.AutoResizeTextView
                android:id="@+id/button_electronics"
                android:drawableLeft="@drawable/ic_category_electronics"
                android:text="@string/electronics"
                style="@style/CategoryButton"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.airbitz.objects.AutoResizeTextView
                android:id="@+id/button_atms"
                android:drawableLeft="@drawable/ic_category_atms"
                android:text="@string/atms"
                style="@style/CategoryButton"
                />

            <com.airbitz.objects.AutoResizeTextView
                android:id="@+id/button_shopping"
                android:drawableLeft="@drawable/ic_category_shopping"
                android:text="@string/shopping"
                style="@style/CategoryButton"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.airbitz.objects.AutoResizeTextView
                android:id="@+id/button_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryFrost"
                android:text="@string/more_categories"
                android:gravity="center"
                style="@style/CategoryButton"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

