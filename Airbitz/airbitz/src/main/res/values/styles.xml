    <style name="CalcButtonText">
        <item name="android:layout_height">@dimen/calc_button_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/calc_button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/calc_button_textsize</item>
