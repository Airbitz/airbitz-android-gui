<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Blue" parent="AppTheme">
        <item name="toolbarBackgroundColor">@color/colorPrimary</item>
        <item name="toolbarTextColor">@android:color/white</item>
    </style>
 
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>

        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">0dp</item>

        <item name="windowActionModeOverlay">true</item>

        <!-- toolbar attributes -->
        <item name="toolbarBackgroundColor">@color/colorPrimary</item>
        <item name="toolbarTextColor">@android:color/white</item>

        <!-- override default styles --> 
        <item name="buttonStyle">@style/ButtonStyle</item>

        <!-- override edit text style -->
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="editTextBackground">@drawable/edit_text_dark</item>
        <item name="editTextError">@drawable/edit_text_dark</item>
        <item name="editTextControlNormal">@color/editText</item>
        <item name="editTextControlActivated">@color/editTextSemi</item>
        <item name="editTextDisabledAlpha">0.5</item>

        <item name="md_dark_theme">false</item>
        <item name="md_title_color">@color/colorPrimary</item>
        <item name="md_positive_color">@color/colorPrimary</item>
        <item name="md_neutral_color">@color/colorPrimary</item>
        <item name="md_negative_color">@color/colorPrimary</item>
    </style>

    <style name="ToolBarCommon">
    </style>

    <style name="ButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">48dip</item>
    </style>

    <style name="EditTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@drawable/edit_text_color</item>
        <item name="android:background">@drawable/edit_text_dark</item>
        <item name="android:textCursorDrawable">@drawable/bold_cursor</item>
    </style>

    <style name="CategoryItem">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/transparent_until_pressed</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:drawablePadding">@dimen/content_padding_2</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/content_padding_2</item>
        <item name="android:paddingRight">6.3dp</item>
    </style>

    <style name="CategoryItemTop">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/transparent_until_pressed_top</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:drawablePadding">@dimen/content_padding_2</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/content_padding_2</item>
        <item name="android:paddingRight">6.3dp</item>
    </style>

    <style name="CategoryItemBottom">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/transparent_until_pressed_bottom</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:drawablePadding">@dimen/content_padding_2</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/content_padding_2</item>
        <item name="android:paddingRight">6.3dp</item>
    </style>

    <style name="CategoryItemDetail">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/transparent_until_pressed</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:drawablePadding">@dimen/content_padding_2</item>
        <item name="android:focusable">false</item>
