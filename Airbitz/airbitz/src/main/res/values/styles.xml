        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/bright_text_hint</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:background">@color/clear_color</item>
    </style>

    <style name="ToolbarSearchEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorPrimaryFrost</item>
        <item name="android:textCursorDrawable">@drawable/bold_cursor_white</item>
