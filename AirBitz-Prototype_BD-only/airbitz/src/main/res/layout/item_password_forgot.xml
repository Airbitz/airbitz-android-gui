<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/item_password_forgot_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:enabled="false"
        android:textSize="11sp"
        android:paddingLeft="2mm"
        android:layout_marginTop="1mm"/>
    <EditText
        android:id="@+id/item_password_forgot_answer"
        android:layout_width="match_parent"
        android:layout_height="6mm"
        android:textColor="@android:color/white"
        android:inputType="textVisiblePassword"
        android:enabled="true"
        android:textCursorDrawable="@drawable/bold_cursor_white"
        android:textSize="11sp"
        android:paddingLeft="2mm"
        android:paddingRight="2mm"
        android:gravity="center_vertical"
        android:layout_marginTop="1mm"
        android:layout_marginBottom="2mm"
        android:background="@drawable/bg_textfield"/>
</LinearLayout>
