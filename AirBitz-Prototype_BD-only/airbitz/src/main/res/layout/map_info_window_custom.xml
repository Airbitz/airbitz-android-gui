<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/balloon_layout"
        android:layout_width="190dp"
        android:layout_height="110dp"
        android:background="@drawable/bg_balloon_info_shadow"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/balloon_layout_inner"
            android:layout_width="180dp"
            android:layout_height="95dp"
            android:background="@drawable/bg_balloon_info_no_shadow"
            android:orientation="vertical"
            android:paddingBottom="27dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/background_image"
                    android:layout_width="164dp"
                    android:layout_height="67dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/infoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/padding_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/titleYourLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Your Location"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/shadow_layout"
                        android:layout_width="170dp"
                        android:layout_height="90dp"
                        android:background="@drawable/gradient_background_map_info"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:paddingBottom="35dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp">

                        <TextView
                            android:id="@+id/titleInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shadowColor="#FF999999"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="1"
                            android:text="TITLE"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/addressInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shadowColor="#FF999999"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="1"
                            android:text="ADDRESS"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="166dp"
                    android:layout_height="67dp"
                    android:background="@drawable/inner_round_rectangle"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>