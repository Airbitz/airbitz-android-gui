<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/balloon_layout"
        android:background="@drawable/bg_balloon_info_shadow">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="95dp"
            android:orientation="vertical"
            android:paddingTop="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="27dp"
            android:id="@+id/balloon_layout_inner"
            android:background="@drawable/bg_balloon_info_no_shadow">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/background_image"
                    android:layout_width="164dp"
                    android:layout_height="67dp"
                    android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/infoLayout"
                android:weightSum="1"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/padding_layout"
                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Location"
                    android:textStyle="bold"
                    android:id="@+id/titleYourLocation"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="35dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/gradient_background_map_info"
                    android:id="@+id/shadow_layout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TITLE"
                        android:textStyle="bold"
                        android:id="@+id/titleInfo"
                        android:textColor="@android:color/white"
                        android:shadowColor="#FF999999"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="1"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ADDRESS"
                        android:id="@+id/addressInfo"
                        android:textColor="@android:color/white"
                        android:shadowColor="#FF999999"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="1" />
                </LinearLayout>
            </LinearLayout>

                <View
                    android:layout_width="166dp"
                    android:layout_height="67dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/inner_round_rectangle"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>