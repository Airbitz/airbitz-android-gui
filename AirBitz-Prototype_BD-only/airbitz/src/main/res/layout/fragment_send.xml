<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_root">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44.1dp"
        android:id="@+id/fragment_category_layout_header"
        android:background="@drawable/bg_dark_header">

        <ImageButton
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/fragment_category_button_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_back"
            android:padding="12.6dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/fragment_category_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_title"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>


        <com.airbitz.objects.HighlightOnPressImageButton
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:id="@+id/fragment_send_help_button"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_help"
            android:padding="12.6dp"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_data"
        android:layout_below="@id/fragment_category_layout_header"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_send"
                    android:layout_width="match_parent"
                    android:layout_height="85.05dp"
                    android:background="@drawable/emboss_down"
                    android:layout_marginLeft="15.75dp"
                    android:layout_marginRight="15.75dp"
                    android:layout_marginTop="15.75dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="9.45dp"
                    android:paddingRight="6.3dp"
                    android:paddingLeft="6.3dp">

                    <LinearLayout
                        android:id="@+id/layout_from"
                        android:layout_width="match_parent"
                        android:layout_height="25.2dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="9.45dp">

                        <TextView
                            android:id="@+id/textview_from"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text="@string/send_from_title"
                            android:gravity="center_vertical|right"
                            android:layout_marginRight="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingRight="6.3dp"/>

                        <com.airbitz.objects.HighlightOnPressSpinner
                            android:id="@+id/from_wallet_spinner"
                            style="@style/BlackDropShadow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:background="@drawable/bg_btn_blue_stretch"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_to"
                        android:layout_width="match_parent"
                        android:layout_height="28.35dp"
                        android:orientation="horizontal"
                        android:layout_below="@id/layout_from"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textview_to"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="@string/send_to_title"
                            android:gravity="right"
                            android:layout_marginRight="8dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:paddingRight="6.3dp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/edittext_to"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_edittext"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:inputType="textAutoComplete|textNoSuggestions"
                            android:paddingLeft="6.3dp"
                            android:singleLine="true"
                            android:textCursorDrawable="@drawable/bold_cursor_white"
                            android:hint="@string/fragment_send_send_to_hint"
                            android:textColorHint="@color/text_hint"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:imeOptions="actionDone"/>
                    </LinearLayout>

                </RelativeLayout>




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_data">

        <FrameLayout
            android:id="@+id/layout_camera_preview"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

        </FrameLayout>

        <TextView
            android:id="@+id/textview_scan_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_scan_text"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDy="4"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:id="@+id/button_flash"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/btn_flash_off"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/button_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:src="@drawable/gallery_button"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_margin="12.6dp"
            android:background="@drawable/camera_frame"/>

    </RelativeLayout>

    <View
        android:id="@+id/dummy_focus"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/listview_container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-38.6dp"
        android:layout_below="@id/layout_data"
        android:background="@android:color/transparent"
        android:visibility="gone">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="-1dp"
            android:padding="12.6dp"
            android:id="@+id/listing_listview"
            android:layout_below="@+id/fragment_send_listview_triangle"
            android:background="@drawable/category_popup"/>

        <View
            android:id="@+id/fragment_send_listview_triangle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-25dp"
            android:background="@drawable/blue_triangle"/>

    </RelativeLayout>

</RelativeLayout>
