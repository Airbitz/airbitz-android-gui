<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_detail_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_category_layout_header"
        android:layout_width="match_parent"
        android:layout_height="44.1dp"
        android:background="@drawable/bg_dark_header">

        <com.airbitz.objects.HighlightOnPressImageButton
            android:id="@+id/fragment_contact_picker_button_back"
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/two_mm"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/fragment_contact_picker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <com.airbitz.objects.HighlightOnPressImageButton
            android:id="@+id/fragment_contact_picker_button_help"
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/two_mm"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_help" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_contact_picker_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:weightSum="100">

        <EditText
            android:id="@+id/fragment_contact_picker_edittext_name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="textAutoComplete|textNoSuggestions|textCapWords"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@drawable/bold_cursor_white"
            android:textSize="17sp" />

        <ListView
            android:id="@+id/fragment_contact_picker_listview_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/gray_border"
            android:dividerHeight="1px"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>
