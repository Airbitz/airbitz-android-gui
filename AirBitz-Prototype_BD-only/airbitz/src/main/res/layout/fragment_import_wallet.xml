<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:id="@+id/layout_root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_padding"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:background="@drawable/bg_tab_bar"
            android:id="@+id/directory_button"
            android:src="@drawable/ico_tab_directory"
            android:layout_weight="1"
            android:visibility="invisible"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_header"
        android:background="#40000000"
        android:padding="4dp">

        <ImageButton
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/button_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_back"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import Wallet"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:textSize="20dp"/>


        <ImageButton
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/button_help"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_help"
            android:layout_margin="5dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_data"
        android:layout_below="@id/layout_header"
        android:layout_above="@id/bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<ScrollView-->
            <!--android:id="@+id/layout_scroll"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/layout_header"-->
            <!--android:layout_above="@id/bottom_padding">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edge_black_transparent_30"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:id="@+id/layout_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/textview_from"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Import Wallet:"
                            android:gravity="right|center_vertical"
                            android:textColor="@android:color/white"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="40dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:layout_gravity="right"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/button_from"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/textview_account"
                            android:text="Checking"
                            android:textStyle="bold"
                            android:background="@drawable/btn_trans_rounded"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textSize="18dp"
                            android:layout_weight="1"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/layout_from"
                        android:weightSum="2"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp">

                        <TextView
                        android:id="@+id/textview_to"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Private Key:"
                        android:gravity="right"
                        android:textColor="@android:color/white"
                        android:layout_below="@id/textview_account"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textStyle="bold"/>

                        <EditText
                        android:id="@+id/edittext_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textview_to"
                        android:hint="Enter bitcoin address (optional)"
                        android:textColorHint="@android:color/white"
                        android:background="@drawable/rounded_edge_black_transparent_30"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="15dp"
                        android:drawableRight="@drawable/ico_login"
                        android:layout_weight="1"/>
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/textview_scan_qrcode"
                    android:layout_below="@id/layout_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan QR Code or NFC"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"/>

                <RelativeLayout
                    android:id="@+id/layout_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/layout_camera_preview"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_centerHorizontal="true">

                    </FrameLayout>
                </RelativeLayout>



            </LinearLayout>

        <!--</ScrollView>-->




    </LinearLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/layout_action"
        android:layout_above="@id/bottom_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_camera">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_edge_white_transparent_30"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/button_flash_on"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_flash_on_off"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/button_flash_auto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ico_flash_auto_on"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/button_flash_off"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ico_flash_off_off"
                    android:layout_weight="1"/>

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
