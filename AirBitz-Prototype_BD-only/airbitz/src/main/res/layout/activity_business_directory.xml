<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:orientation="vertical"
    tools:context="com.airbitz.activities.BusinessDirectoryActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:id="@+id/dummy_focus"
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/directory_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_bar"
            android:padding="15dp"
            android:src="@drawable/ico_tab_directory"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40000000"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_back"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="Directory"
            android:textColor="@android:color/white"
            android:textSize="20dp" />


        <ImageButton
            android:id="@+id/button_help"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_help"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/separator_header"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/layout_header"
        android:background="@android:color/black"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/separator_header_search"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/separator_header"
        android:background="@android:color/holo_blue_light"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator_header_search"
        android:background="#28007bbe"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />


            <com.airbitz.objects.ClearableEditText
                android:id="@+id/edittext_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_edge"
                android:drawableLeft="@drawable/ico_search"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/btn_x"
                android:hint="Search"
                android:inputType="text|textNoSuggestions"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:textColorHint="#b4b3b4" />


            <com.airbitz.objects.ClearableEditText
                android:id="@+id/edittext_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edittext_search"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edge"
                android:drawableLeft="@drawable/ico_loc"
                android:drawablePadding="13dp"
                android:drawableRight="@drawable/btn_x"
                android:hint="Current Location"
                android:inputType="text|textNoSuggestions"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:textColorHint="#b4b3b4"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/separator_search_1"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/layout_edit_search"
            android:background="#50000000"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/separator_search"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/separator_search_1"
            android:background="@android:color/black"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/separator_search_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/separator_search"
            android:background="#30000000"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>


    <com.airbitz.objects.ObservableScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_search">

        <LinearLayout
            android:id="@+id/layout_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_listview_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp">

                    <ScrollView
                        android:id="@+id/layout_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_edge_blue"
                                android:showDividers="middle"
                                android:divider="@drawable/gray_white_divider"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/button_restaurant"
                                    style="@style/CategoryItem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ico_restaurant"
                                    android:text="Restaurant" />

                                <Button
                                    android:id="@+id/button_bar"
                                    style="@style/CategoryItem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ico_bar"
                                    android:drawablePadding="28dp"
                                    android:paddingLeft="28dp"
                                    android:text="Bar" />

                                <Button
                                    android:id="@+id/button_coffee_tea"
                                    style="@style/CategoryItem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ico_coffee"
                                    android:drawablePadding="28dp"
                                    android:text="Coffee and Tea" />

                                <Button
                                    android:id="@+id/button_more"
                                    style="@style/CategoryItem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ico_more"
                                    android:text="More Categories" />
                            </LinearLayout>

                            <Spinner
                                android:id="@+id/spinner_more_categories"
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@android:color/transparent"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_current_location"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#addff1"
                        android:gravity="left"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="10dp"
                        android:paddingLeft="35dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="Current location"
                        android:textColor="#006699"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/separator_current"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/button_current_location"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/button_on_the_Web"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator_current"
                        android:layout_centerVertical="true"
                        android:background="#addff1"
                        android:gravity="left"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="10dp"
                        android:paddingLeft="35dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="On the Web"
                        android:textColor="#006699"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/separator_on_the_web"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/button_on_the_Web"
                        android:background="@android:color/black"
                        android:orientation="vertical"
                        android:visibility="gone" />

                    <ListView
                        android:id="@+id/listview_search"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator_on_the_web"
                        android:visibility="gone"></ListView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#40000000"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_near_you"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#C0C0C0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#30ffffff"
                            android:orientation="vertical"></LinearLayout>

                        <TextView
                            android:id="@+id/textview_nearyou"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#C0C0C0"
                            android:inputType="textNoSuggestions"
                            android:paddingBottom="3dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"
                            android:shadowColor="#FFFFFFFF"
                            android:shadowDx="1"
                            android:shadowDy="2"
                            android:shadowRadius="1"
                            android:text="Near You"
                            android:textColor="#909090"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#30ffffff"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#90000000"
                            android:orientation="vertical"></LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/venue"
                    android:name="com.airbitz.fragments.VenueFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>
    </com.airbitz.objects.ObservableScrollView>


</RelativeLayout>


