<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:orientation="vertical"
    tools:context="com.airbitz.activities.BusinessDirectoryActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:id="@+id/dummy_focus"
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" />

    <!-- Header -->

    <include
        android:id="@+id/layout_header"
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Search Bar -->

    <include
        android:id="@+id/layout_search"
        layout="@layout/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_header" />

    <FrameLayout
        android:id="@+id/scroll_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_search"
        android:foreground="@drawable/actionbar_shadow">

        <com.airbitz.objects.ObservableScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_listview_business"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/actionbar_shadow_bottom"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp">

                        <ScrollView
                            android:id="@+id/layout_scroll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/rounded_edge_blue"
                                    android:divider="@drawable/gray_white_divider"
                                    android:orientation="vertical"
                                    android:showDividers="middle">

                                    <TextView
                                        android:id="@+id/button_restaurant"
                                        style="@style/CategoryItemTop"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ico_restaurant"
                                        android:text="@string/restaurant_and_food_trucks" />

                                    <TextView
                                        android:id="@+id/button_bar"
                                        style="@style/CategoryItem"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ico_bar"
                                        android:drawablePadding="28dp"
                                        android:paddingLeft="28dp"
                                        android:text="@string/bars_and_nightclubs" />

                                    <TextView
                                        android:id="@+id/button_coffee_tea"
                                        style="@style/CategoryItem"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ico_coffee"
                                        android:drawablePadding="28dp"
                                        android:text="@string/coffee_and_tea" />

                                    <TextView
                                        android:id="@+id/button_more"
                                        style="@style/CategoryItemBottom"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ico_more"
                                        android:text="@string/more_categories" />
                                </LinearLayout>

                                <com.airbitz.widgets.NoDefaultSpinner
                                    android:id="@+id/spinner_more_categories"
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:background="@android:color/transparent"
                                    android:visibility="invisible" />
                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>

                    <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->

                    <!--<Button-->
                    <!--android:id="@+id/button_current_location"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="#addff1"-->
                    <!--android:gravity="left"-->
                    <!--android:padding="@dimen/content_padding"-->
                    <!--android:textSize="@dimen/text_size_h4"-->
                    <!--android:text="Current location"-->
                    <!--android:textColor="#006699"-->
                    <!--android:visibility="gone" />-->

                    <!--<View-->
                    <!--android:id="@+id/separator_current"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1px"-->
                    <!--android:background="@color/gray_border"-->
                    <!--android:layout_below="@id/button_current_location"-->
                    <!--android:visibility="gone" />-->

                    <!--<Button-->
                    <!--android:id="@+id/button_on_the_Web"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@id/separator_current"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:background="#addff1"-->
                    <!--android:padding="@dimen/content_padding"-->
                    <!--android:textSize="@dimen/text_size_h4"-->
                    <!--android:gravity="left"-->
                    <!--android:text="On the Web"-->
                    <!--android:textColor="#006699"-->
                    <!--android:visibility="gone" />-->

                    <!--<View-->
                    <!--android:id="@+id/separator_on_the_web"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1px"-->
                    <!--android:layout_below="@id/button_on_the_Web"-->
                    <!--android:background="@color/gray_border"-->
                    <!--android:visibility="gone" />-->

                    <ListView
                        android:id="@+id/listview_search"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/gray_border"
                        android:dividerHeight="1px"
                        android:visibility="gone" />
                    <!--</RelativeLayout>-->


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/fragment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/venue"
                        android:name="com.airbitz.fragments.VenueFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"/>

                    <LinearLayout
                        android:id="@+id/layout_near_you"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true">

                        <View
                            android:id="@+id/flag_for_sticky"
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#b9d1dd" />

                        <TextView
                            android:id="@+id/textview_nearyou"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_background_grey"
                            android:paddingBottom="@dimen/content_padding_quarter"
                            android:paddingLeft="@dimen/content_padding_1_quarter"
                            android:paddingTop="@dimen/content_padding_quarter"
                            android:shadowColor="#FFFFFFFF"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"
                            android:text="Near You"
                            android:textColor="#ff384954"
                            android:textSize="@dimen/text_size_small" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@android:color/black" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#88FFFFFF" />

                    </LinearLayout>

                </RelativeLayout>

                <include layout="@layout/loading_indicator" />

            </LinearLayout>

        </com.airbitz.objects.ObservableScrollView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_near_you_sticky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layout_search"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#b9d1dd" />

        <TextView
            android:id="@+id/textview_nearyou_sticky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background_grey"
            android:paddingBottom="@dimen/content_padding_quarter"
            android:paddingLeft="@dimen/content_padding_1_quarter"
            android:paddingTop="@dimen/content_padding_quarter"
            android:shadowColor="#FFFFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Near You"
            android:textColor="#ff384954"
            android:textSize="@dimen/text_size_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/black" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#88FFFFFF" />

    </LinearLayout>


</RelativeLayout>


