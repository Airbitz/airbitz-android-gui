<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44.1dp"
        android:id="@+id/layout_header"
        android:background="#40000000">

        <ImageButton
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/button_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_back"
            android:padding="12.6dp"/>

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Bitcoin"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"/>


        <ImageButton
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:id="@+id/button_help"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_help"
            android:padding="12.6dp"/>

    </RelativeLayout>

    <ScrollView
         android:id="@+id/layout_amount"
         android:layout_below="@id/layout_header"
         android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_focus_distractor"
                android:orientation="vertical"
                android:focusable="true" android:focusableInTouchMode="true"
                android:layout_width="0px" android:layout_height="0px"/>

            <RelativeLayout
                android:id="@+id/layout_export_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edge_black_transparent_30"
                android:layout_marginLeft="12.6dp"
                android:layout_marginRight="12.6dp"
                android:layout_marginTop="12.6dp"
                android:gravity="center_horizontal"
                android:paddingTop="9.45dp"
                android:paddingBottom="9.45dp"
                android:paddingRight="15.75dp"
                android:paddingLeft="15.75dp">

                <LinearLayout
                    android:id="@+id/layout_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="22.05dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginBottom="9.45dp">

                    <TextView
                        android:id="@+id/textview_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/request_wallet_title"
                        android:gravity="center_vertical|right"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_weight="6"
                        android:textStyle="bold"
                        android:layout_marginRight="12.6dp"/>

                    <Spinner
                        android:id="@+id/new_wallet_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/btn_trans_rounded_stretch"
                        android:gravity="center"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <Button
                    android:id="@+id/button_expand"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15.75dp"
                    android:background="@drawable/btn_expand"
                    android:layout_below="@id/layout_wallet"/>

                <EditText
                    android:id="@+id/edittext_btc"
                    android:layout_below="@id/layout_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="25.2dp"
                    android:layout_toLeftOf="@id/button_expand"
                    android:hint="0.00000"
                    android:textColorHint="#DDDDDD"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_edge_black_transparent_30"
                    android:paddingLeft="9.45dp"
                    android:paddingRight="9.45dp"
                    android:layout_marginBottom="9.45dp"
                    android:textSize="14dp"
                    android:drawableRight="@drawable/ico_btc_white"/>
                <EditText
                    android:id="@+id/edittext_dollar"
                    android:layout_below="@id/edittext_btc"
                    android:layout_width="match_parent"
                    android:layout_height="25.2dp"
                    android:layout_toLeftOf="@id/button_expand"
                    android:hint="0.00"
                    android:textColorHint="#DDDDDD"
                    android:background="@drawable/rounded_edge_black_transparent_30"
                    android:textColor="@android:color/white"
                    android:paddingLeft="9.45dp"
                    android:paddingRight="9.45dp"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:drawableRight="@drawable/ico_usd_white"/>

                <TextView
                    android:id="@+id/textview_converter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.00 BTC = $600.00 USD"
                    android:textColor="@android:color/white"
                    android:layout_below="@id/edittext_dollar"
                    android:gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:textSize="12dp"/>

            </RelativeLayout>



        </LinearLayout>

    </ScrollView>
    
    <RelativeLayout
        android:id="@+id/button_group"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_alignTop="@id/layout_amount"
        android:layout_marginRight="27dp"
        android:layout_marginTop="53.54dp"
        android:background="@drawable/btn_group"
        android:layout_alignParentRight="true"
        android:visibility="gone">
        
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button_import_wallet"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button_sms"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/button_import_wallet"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button_unexpand"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/button_sms"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button_ble"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button_email"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/button_ble"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button_qr_code"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/button_email"/>
        
    </RelativeLayout>

