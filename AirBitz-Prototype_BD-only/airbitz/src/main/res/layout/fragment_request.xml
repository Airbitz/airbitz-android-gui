<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44.1dp"
        android:id="@+id/fragment_category_layout_header"
        android:background="@drawable/bg_dark_header">

        <ImageButton
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/fragment_category_button_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_back"
            android:padding="12.6dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/fragment_category_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_title"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>


        <com.airbitz.objects.HighlightOnPressImageButton
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:id="@+id/fragment_request_help_button"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_help"
            android:padding="12.6dp"/>

    </RelativeLayout>

    <ScrollView
         android:id="@+id/layout_amount"
         android:layout_below="@id/fragment_category_layout_header"
         android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_focus_distractor"
                android:orientation="vertical"
                android:focusable="true" android:focusableInTouchMode="true"
                android:layout_width="0px" android:layout_height="0px"/>

            <RelativeLayout
                android:id="@+id/layout_export_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emboss_down"
                android:layout_marginLeft="12.6dp"
                android:layout_marginRight="12.6dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:paddingTop="9.45dp"
                android:paddingBottom="12dp"
                android:paddingRight="15.75dp"
                android:paddingLeft="15.75dp">

                <LinearLayout
                    android:id="@+id/layout_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="22.05dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/textview_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/request_wallet_title"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="12.6dp"/>

                    <com.airbitz.objects.HighlightOnPressSpinner
                        android:id="@+id/new_wallet_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_blue_stretch"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <com.airbitz.objects.HighlightOnPressButton
                    android:id="@+id/button_expand"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15.75dp"
                    android:background="@drawable/btn_expand"
                    android:layout_below="@id/layout_wallet"/>

                <RelativeLayout
                    android:id="@+id/layout_btc_fields"
                    android:layout_below="@id/layout_wallet"
                    android:layout_toLeftOf="@id/button_expand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignTop="@id/button_expand"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/edittext_btc"
                        android:layout_width="match_parent"
                        android:layout_height="25.2dp"
                        android:hint="@string/request_amount_hint"
                        android:textColorHint="@color/text_hint"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_edittext"
                        android:singleLine="true"
                        android:paddingLeft="9.45dp"
                        android:textCursorDrawable="@drawable/bold_cursor_white"
                        android:paddingRight="50.4dp"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/request_btc_denomination"
                        style="@style/BlackDropShadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:text="mBTC"/>
                </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_fiat_fields"
                android:layout_below="@id/layout_btc_fields"
                android:layout_toLeftOf="@id/button_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/edittext_dollar"
                    android:layout_width="match_parent"
                    android:layout_height="25.2dp"
                    android:hint="@string/request_amount_hint"
                    android:textColorHint="@color/text_hint"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@android:color/white"
                    android:textCursorDrawable="@drawable/bold_cursor_white"
                    android:paddingLeft="9.45dp"
                    android:paddingRight="44.1dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/request_fiat_denomination"
                    style="@style/BlackDropShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:text="USD"/>
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_import"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp">

                <com.airbitz.objects.HighlightOnPressButton
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_import_wallet"
                    android:text="@string/request_button_import"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:background="@drawable/bg_btn_blue_stretch"/>

                <TextView
                    android:id="@+id/textview_converter"
                    style="@style/BlackDropShadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.00 BTC = $ 600.00 USD"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/fragment_request_dummy_focus"
        android:focusableInTouchMode="true"
        android:focusable="true" />
</RelativeLayout>