<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_detail_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_header"
        android:background="#40000000"
        android:padding="4dp">

        <ImageButton
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/transaction_detail_button_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_back"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/transaction_detail_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_details_title"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:textSize="20sp"/>


        <ImageButton
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/transaction_detail_button_help"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_help"
            android:layout_margin="5dp"/>

    </RelativeLayout>


    <ScrollView
        android:id="@+id/transaction_detail_layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_header"
        android:layout_above="@id/bottom_padding"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/transaction_detail_textview_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="November 13, 2013 04:56 PM"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:padding="5dp"
                android:textSize="14sp"/>

            <RelativeLayout
                android:id="@+id/transaction_detail_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transaction_detail_textview_date"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent" >

                <EditText
                    android:id="@+id/transaction_detail_textview_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_edge_black_transparent_30"
                    android:ems="10"/>

                <ImageView
                    android:id="@+id/transaction_detail_clear_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_x" />
            </RelativeLayout>


            <Button
                android:id="@+id/transaction_detail_button_advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/transaction_detail_layout_name"
                android:text="@string/transaction_details_advanced_title"
                android:textStyle="bold"
                android:background="@drawable/btn_trans_rounded"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColorHint="#DDDDDD"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>


            <RelativeLayout
                android:id="@+id/layout_sent_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edge_black_transparent_30"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/transaction_detail_button_advanced"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:id="@+id/transaction_detail_layout_sent_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/transaction_detail_textview_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transaction_details_to_title"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/transaction_detail_textview_to_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baseball Team"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textSize="15sp"/>

                    </LinearLayout>


                <TextView
                    android:id="@+id/transaction_detail_textview_bitcoin_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/transaction_detail_layout_sent_from"
                    android:layout_centerHorizontal="true"
                    android:hint="B 25.000"
                    android:textColorHint="@android:color/white"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="25sp"/>


                <EditText
                    android:id="@+id/transaction_detail_edittext_dollar_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/transaction_detail_textview_bitcoin_value"
                    android:hint="$ 2000.00"
                    android:textColorHint="@android:color/white"
                    android:background="@drawable/bg_textfield"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textSize="25sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/transaction_detail_layout_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_trans_dark_lighter"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/layout_sent_detail"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/transaction_detail_textview_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/transaction_details_category_title"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="2dp"
                    android:textSize="15sp"/>


                <EditText
                    android:id="@+id/transaction_detail_edittext_category"
                    android:layout_below="@+id/transaction_detail_textview_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/bg_textfield"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:hint="@string/transaction_details_category_hint"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:inputType="textAutoComplete"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>


                <TextView
                    android:id="@+id/transaction_detail_textview_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/transaction_detail_edittext_category"
                    android:text="@string/transaction_details_notes_title"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="2dp"
                    android:textSize="15sp"/>

                <EditText
                android:id="@+id/transaction_detail_edittext_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/transaction_detail_textview_notes"
                android:hint="@string/transaction_details_notes_hint"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:gravity="left"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:inputType="text|textCapSentences|textMultiLine"
                android:singleLine="false"
                android:lines="2"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@drawable/bg_textfield"/>

                <Spinner
                    android:id="@+id/spinner_categories"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_below="@+id/transaction_detail_edittext_notes"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:inputType="textAutoComplete"
                    android:visibility="gone">
                </Spinner>



                <Button
                    android:id="@+id/transaction_detail_button_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/string_done"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/transaction_detail_edittext_notes"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_green"
                    android:padding="15dp"/>

            </RelativeLayout>




        </RelativeLayout>

    </ScrollView>

</RelativeLayout>