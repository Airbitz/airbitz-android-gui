<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:orientation="vertical"
    tools:context="com.airbitz.activities.LandingActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:id="@+id/dummy_focus"
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" />

    <!-- Header -->

    <include
        android:id="@+id/layout_header"
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Search Bar -->

    <include
        android:id="@+id/layout_search"
        layout="@layout/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_search">

        <LinearLayout
            android:id="@+id/map_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:gravity="right">

                        <ImageButton
                            android:id="@+id/locateMeButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ico_locate_me" />
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dragLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000">

                <ImageView
                    android:id="@+id/dragImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C0C0C0"
                    android:padding="8dp"
                    android:scaleType="center"
                    android:src="@drawable/ico_drag" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/black"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/venue"
                    android:name="com.airbitz.fragments.VenueFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_aucomplete_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#70000000"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_current_location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#addff1"
                android:gravity="left"
                android:inputType="textNoSuggestions"
                android:paddingBottom="10dp"
                android:paddingLeft="35dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="Current location"
                android:textColor="#006699"
                android:textSize="14dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/separator_current"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/black"
                android:orientation="vertical"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_on_the_Web"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#addff1"
                android:gravity="left|center_vertical"
                android:inputType="textNoSuggestions"
                android:paddingBottom="10dp"
                android:paddingLeft="35dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="On the Web"
                android:textColor="#006699"
                android:textSize="14dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/separator_on_the_web"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/black"
                android:orientation="vertical"
                android:visibility="gone" />

            <ListView
                android:id="@+id/listview_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@drawable/autocomplete_list_selector"
                android:visibility="gone"></ListView>
        </LinearLayout>


    </FrameLayout>


</RelativeLayout>