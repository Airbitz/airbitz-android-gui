<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="6mm">

    <ImageView
        android:id="@+id/transaction_detail_item_imageview"
        android:layout_width="6mm"
        android:layout_height="6mm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6mm"
        android:orientation="vertical"
        android:background="#addff1"
        android:paddingLeft="2mm">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3.5mm"
            android:text="Name"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:id="@+id/transaction_detail_item_name"
            android:textColor="#000000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2mm"
            android:text="Address"
            android:textSize="11dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/transaction_detail_item_address"
            android:textColor="#000000" />

    </LinearLayout>

</LinearLayout>