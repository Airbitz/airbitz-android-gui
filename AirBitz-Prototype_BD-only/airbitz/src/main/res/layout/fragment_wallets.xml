<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:paddingBottom="2mm"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ListViewAnimations">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="7mm"
        android:id="@+id/layout_header"
        android:background="#40000000">

        <ImageButton
            android:layout_width="7mm"
            android:layout_height="7mm"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/button_add"
            android:padding="2mm"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_add" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallets_title"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"/>


        <ImageButton
            android:layout_width="7mm"
            android:layout_height="7mm"
            android:id="@+id/button_help"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_help"
            android:padding="2mm"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_data"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2mm"
        android:layout_marginLeft="2mm"
        android:layout_below="@id/layout_header">

        <TextView
            android:id="@+id/textview_balance"
            android:layout_width="wrap_content"
            android:layout_height="10mm"
            android:text="@string/wallets_balance_text"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <include layout="@layout/custom_currency_switch"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_data"
        android:layout_marginTop="2mm">

        <com.airbitz.objects.DynamicListView
            android:id="@+id/layout_listview"
            android:layout_width="match_parent"
            android:layout_marginRight="2mm"
            android:layout_marginLeft="2mm"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent" />

        <include layout="@layout/item_listview_wallets_header"
            android:layout_alignParentTop="true"
            android:layout_height="7mm"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginRight="2mm"
            android:layout_marginLeft="2mm"
            android:id="@+id/wallets_header"/>
        <include layout="@layout/item_listview_wallets_header"
            android:layout_below="@id/wallets_header"
            android:id="@+id/archive_header"
            android:layout_height="7mm"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginRight="2mm"
            android:layout_marginLeft="2mm"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30mm"
        android:orientation="vertical"
        android:layout_below="@id/layout_header"
        android:background="#000099"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/layout_new_wallet"
        android:visibility="gone">
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="5mm"
            android:layout_margin="1.5mm"
            android:id="@+id/name_edittext"
            android:background="@drawable/bg_textfield"
            android:textColor="@android:color/white"
            android:textColorHint="#99DDDDDD"
            android:inputType="textVisiblePassword|textNoSuggestions"
            android:hint="Name your wallet"
            android:imeOptions="actionDone"
            android:textCursorDrawable="@drawable/bold_cursor_white"
            android:gravity="center_vertical"
            android:textSize="11dp"
            android:paddingLeft="1mm"/>

        <LinearLayout
            android:id="@+id/spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="4mm"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Currency:"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/white"/>

            <Spinner
                android:id="@+id/new_wallet_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1.5mm"
                android:gravity="center"
                android:background="@drawable/btn_trans_rounded_stretch"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10mm"
            android:padding="3mm"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/online_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ONLINE"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textColor="@android:color/white"/>


            <Switch
                android:id="@+id/new_wallet_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOff=""
                android:textOn=""
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/offline_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="OFFLINE"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textColor="#444444"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6mm"
            android:layout_marginBottom="2mm"
            android:gravity="center">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="22mm"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1mm"
                    android:background="@drawable/btn_orange"
                    android:text="Cancel"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/button_done"
                    android:layout_width="22mm"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1mm"
                    android:background="@drawable/btn_green"
                    android:text="Done"
                    android:textColor="#FFFFFF"/>


            </LinearLayout>


    </LinearLayout>

</RelativeLayout>

