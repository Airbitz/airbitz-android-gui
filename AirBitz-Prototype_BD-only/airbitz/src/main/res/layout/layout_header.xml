<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_header"
    android:layout_width="match_parent"
    android:layout_height="44.1dp"
    android:background="#40000000"
    android:padding="6.3dp">

    <ImageButton
        android:layout_width="44.1dp"
        android:layout_height="44.1dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/button_back"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_back"
        android:padding="12.6dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="44.1dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />

        <!-- NOTE: this needs to be in a ViewGroup since gravity doesn't work properly on AutofitTextView. -->

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="44.1dp"
        android:gravity="center"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/button_help"
        android:layout_toRightOf="@+id/button_back"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:visibility="visible" />

    <ImageButton
        android:layout_width="44.1dp"
        android:layout_height="44.1dp"
        android:id="@+id/button_help"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_help"
        android:padding="12.6dp"
        android:visibility="invisible"/>


</RelativeLayout>
