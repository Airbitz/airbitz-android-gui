<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44.1dp"
        android:id="@+id/layout_header"
        android:background="#40000000">

        <ImageButton
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/button_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_back"
            android:padding="12.6dp"/>

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Bitcoin"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"/>


        <ImageButton
            android:layout_width="44.1dp"
            android:layout_height="44.1dp"
            android:id="@+id/button_help"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_help"
            android:padding="12.6dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/qr_code_view"
        android:layout_width="252dp"
        android:layout_height="252dp"
        android:layout_marginTop="9.45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout_header"/>

    <LinearLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="195.3dp"
        android:orientation="vertical"
        android:layout_marginBottom="15.75dp"
        android:layout_marginRight="12.6dp"
        android:layout_marginLeft="12.6dp"
        android:background="@drawable/rounded_edge_black_transparent_30"
        android:layout_alignParentBottom="true">
        
        <TextView
            android:id="@+id/textview_waiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for Payment..."
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_marginTop="12.6dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textview_bitcoin_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mB 0"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_marginTop="6.3dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textview_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdfadfasdfassdfasdfaegasdgasdsdfasdfasdfawegahoajodfmaijngawenfiwnefkagasdga"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:layout_marginRight="18.9dp"
            android:layout_marginLeft="18.9dp"
            android:layout_marginTop="6.3dp"
            android:layout_marginBottom="6.3dp"
            android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/button_copy_address"
            android:layout_width="245.7dp"
            android:layout_height="37.8dp"
            android:layout_marginBottom="12.6dp"
            android:text="Copy Address"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_green"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/button_cancel"
            android:layout_width="245.7dp"
            android:layout_height="37.8dp"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_blue"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</RelativeLayout>
